sudo iptables -A  INPUT -p tcp --sport 4444 -j ACCEPT
sudo iptables -A  INPUT -p udp --dport 4444 -j ACCEPT
sudo iptables -A  INPUT -p udp --sport 4444 -j ACCEPT
